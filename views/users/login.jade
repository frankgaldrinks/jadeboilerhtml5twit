extends ../layout

block content
  .container
    .row
      .col-lg-6
        h2 Login
        hr
        form(action="/login" method="post" role="form")
          .form-group
            .form-head
              h4 Username
            input.form-control(type="text" name="username")

          .form-group
            .form-head
              h4 Password
            input.form-control(type="password" name="password")
          input(type="submit" class="btn btn-primary" value="Submit")